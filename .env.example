# OCR Provider Configuration
# Options: tesseract, google_vision, azure_cv
OCR_PROVIDER=tesseract

# Storage Backend Configuration
# Options: local, s3, gcs, mongodb, postgresql
STORAGE_BACKEND=local

# API Configuration
PORT=3000
NODE_ENV=development
API_KEY=your-secret-api-key-change-this

# Redis Configuration (for queue management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Azure Computer Vision API
AZURE_CV_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_CV_KEY=your-azure-key

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=document-storage

# Google Cloud Storage Configuration
GCS_BUCKET=document-storage

# Local Storage Configuration
LOCAL_STORAGE_PATH=./storage

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/documents
MONGODB_DB_NAME=documents

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=documents
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff,bmp,docx,xlsx
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=300000

# OCR Configuration
OCR_LANGUAGE=eng
OCR_DPI=300
OCR_CONFIDENCE_THRESHOLD=0.6

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_SECRET=

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
